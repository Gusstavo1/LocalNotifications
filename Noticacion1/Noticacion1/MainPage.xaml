<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Noticacion1.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Ingresa el Título del mensaje"/>
        <Entry x:Name="EntryTitleMessage"/>
        
        <Label Text="Ingresa el mensaje"/>
        <Entry x:Name="EntryMessage"/>
        
        <Label Text="Ingresa el tiempo para enviar el mensaje"/>
        <Entry x:Name="EntryDateMessage"/>

        <Button Text="Enviar notificación" Clicked="Button_Clicked"/>
        <Button Text="Crear workManager" Clicked="Button_Clicked_1"></Button>
    </StackLayout>

</ContentPage>
